<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="miles2run" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <class>org.miles2run.domain.entities.Activity</class>
        <class>org.miles2run.domain.entities.CommunityRun</class>
        <class>org.miles2run.domain.entities.Goal</class>
        <class>org.miles2run.domain.entities.DistanceGoal</class>
        <class>org.miles2run.domain.entities.DurationGoal</class>
        <class>org.miles2run.domain.entities.CommunityRunGoal</class>
        <class>org.miles2run.domain.entities.Profile</class>
        <class>org.miles2run.domain.entities.SocialConnection</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
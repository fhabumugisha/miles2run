        <class>org.miles2run.domain.entities.CommunityRun</class>
        <class>org.miles2run.domain.entities.Goal</class>
        <class>org.miles2run.domain.entities.DistanceGoal</class>
        <class>org.miles2run.domain.entities.DurationGoal</class>
        <class>org.miles2run.domain.entities.CommunityRunGoal</class>
        <class>org.miles2run.domain.entities.Profile</class>
        <class>org.miles2run.domain.entities.SocialConnection</class>


<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="milestogoPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/MySQLDS</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="none"/>
            <!--<property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>-->
            <!--<property name="javax.persistence.schema-generation.scripts.create-target" value="file:/Users/shekhargulati/dev/sunday-apps/miles2run-workspace/miles2run-local/sql/create.sql"/>-->
            <!--<property name="javax.persistence.schema-generation.scripts.drop-target" value="file:/Users/shekhargulati/dev/sunday-apps/miles2run-workspace/miles2run-local/sql/drop.sql"/>-->
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>